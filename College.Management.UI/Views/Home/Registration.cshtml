@model College.Management.Entities.UserDto

@using (Html.BeginForm("UserRegistration", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <h4>Register New User</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-3" })

    {
        var isSuccesful = Session["Success"];

        if (isSuccesful != null && bool.Parse(isSuccesful.ToString()))
        {
            <div class="alert alert-success">
                <strong>Successful!</strong> User successfully added to database
            </div>
        }
        else if (isSuccesful != null && !bool.Parse(isSuccesful.ToString()))
        { <div class="alert alert-danger">
                <strong>Error!</strong> Something wrong happend while saving the User. Please try again.
            </div>
        }

        Session["Success"] = null;
    }

    <div class="form-group row">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 row">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger col-md-3" })
